schema {
	query: QueryType
}

type QueryType {
	tracks: [Track!]!
	albums: [Album!]!
	artists: [Artist!]!
	entities: [String!]!
	
	track: Track
	album: Album
	artist: Artist
}

type Track {
	id: ID!
	title: String!
	track: Int
	disc: Int
	duration: Int!
	bitrate: Int
	album: Album!
	artists: [Artist!]!
}

type Album {
	id: ID!
	title: String!
	year: Int!
	month: Int
	day: Int
	artists: [Artist!]!
	tracks: [Track!]!
}

type Artist {
	id: ID!
	name: String!
	tracks: [Track!]!
	albums: [Album!]!
}